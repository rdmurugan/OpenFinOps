# OpenFinOps Configuration
# Copy this file to .env and update with your values

# Server Configuration
OPENFINOPS_HOST=0.0.0.0
OPENFINOPS_PORT=8080
OPENFINOPS_DEBUG=false

# Demo Server URL (for website deployment)
DEMO_URL=http://localhost:8080

# AWS Credentials (for AWS telemetry agent)
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-west-2

# Azure Credentials (for Azure telemetry agent)
AZURE_SUBSCRIPTION_ID=your_subscription_id
AZURE_TENANT_ID=your_tenant_id
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret

# GCP Credentials (for GCP telemetry agent)
GCP_PROJECT_ID=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=/path/to/credentials.json

# Databricks Credentials
DATABRICKS_HOST=https://your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=dapi***

# Snowflake Credentials
SNOWFLAKE_ACCOUNT=xy12345.us-east-1
SNOWFLAKE_USER=your_user
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_WAREHOUSE=COMPUTE_WH

# MongoDB Atlas
MONGODB_ATLAS_PUBLIC_KEY=your_public_key
MONGODB_ATLAS_PRIVATE_KEY=your_private_key
MONGODB_ATLAS_PROJECT_ID=your_project_id

# Redis Cloud
REDIS_CLOUD_API_KEY=your_api_key
REDIS_CLOUD_SECRET_KEY=your_secret_key
REDIS_CLOUD_ACCOUNT_ID=your_account_id

# GitHub Actions
GITHUB_TOKEN=ghp_your_token
GITHUB_ORG=your_organization

# DataDog
DATADOG_API_KEY=your_api_key
DATADOG_APP_KEY=your_app_key

# SSL/TLS Configuration (optional)
SSL_CERT_PATH=/etc/nginx/certs/fullchain.pem
SSL_KEY_PATH=/etc/nginx/certs/privkey.pem
